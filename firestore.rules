rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check authentication
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Workouts collection
    match /workouts/{workoutId} {
      // Users can only read/update/delete their own workouts
      allow read, update, delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
      // Users can create workouts with their own userId
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      
      // Subcollection for exercises within a workout
      match /exercises/{exerciseId} {
        // Users can only read/write exercises in their own workouts
        allow read, update, delete: if isAuthenticated() && 
          get(/databases/$(database)/documents/workouts/$(workoutId)).data.userId == request.auth.uid;
        // Users can create exercises in their own workouts
        allow create: if isAuthenticated() && 
          get(/databases/$(database)/documents/workouts/$(workoutId)).data.userId == request.auth.uid &&
          request.resource.data.userId == request.auth.uid;
      }
    }
    
    // Users collection - for user-specific subcollections
    match /users/{uid} {
      // Users can only access their own user document
      allow read, write: if isAuthenticated() && request.auth.uid == uid;
      
      // Plans subcollection
      match /plans/{planId} {
        // Users can read/write their own plans
        allow read, write: if isAuthenticated() && request.auth.uid == uid;
      }
      
      // Body Metrics subcollection
      match /bodyMetrics/{entryId} {
        // Users can read/write their own body metrics
        allow read, write: if isAuthenticated() && request.auth.uid == uid;
      }
      
      // Body Metric Goals subcollection
      match /bodyMetricGoals/{goalId} {
        // Users can read/write their own body metric goals
        allow read, write: if isAuthenticated() && request.auth.uid == uid;
      }
    }
    
    // Block everything else by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

